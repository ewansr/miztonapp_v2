<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/cv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        app:cardElevation="1dp"
        android:layout_height="190dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:elevation="1dp"
                app:cardElevation="1dp"
                android:layout_height="150dp"
                android:id="@+id/cv_datos">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="100dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="74dp"
                        android:layout_height="32dp">

                        <ImageButton
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            app:srcCompat="@drawable/google_maps"
                            android:id="@+id/btn_type"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp" />

                        <TextView
                            android:text="Calle 20 de Noviembre # 523"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/cv_tipo_orden"
                            android:textAppearance="@android:style/TextAppearance.Material.Small"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/btn_type"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginRight="10dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="106dp"
                        android:layout_height="32dp">

                        <ImageButton
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            app:srcCompat="@drawable/calendar_clock"
                            android:id="@+id/btn_date"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp" />

                        <TextView
                            android:text="1989-02-09 00:00:00"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/cv_fecha"
                            android:textAppearance="@android:style/TextAppearance.Material.Small"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/btn_date"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginRight="10dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:text="2949422460"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/cv_titulo"
                            android:textAppearance="@android:style/TextAppearance.Material.Title"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/btn_phone"
                            android:layout_toEndOf="@+id/btn_phone" />

                        <ImageButton
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            app:srcCompat="@drawable/phone_mat"
                            android:id="@+id/btn_phone"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_height="32dp"
                            android:layout_width="32dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp" />

                        <TextView
                            android:text="Cobre"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="14dp"
                            android:layout_marginEnd="14dp"
                            android:id="@+id/cv_tipo"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:textColor="@color/colorAccent"
                            android:layout_alignBottom="@+id/cv_titulo"
                            android:textStyle="normal|bold" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="42dp"
                        android:layout_height="32dp">

                        <TextView
                            android:text="Folio:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView2"
                            android:textAppearance="@android:style/TextAppearance.Material.Menu"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/btn_camera"
                            android:layout_toEndOf="@+id/btn_camera"
                            android:textColor="@color/secondary_text"
                            android:layout_marginRight="10dp" />

                        <ImageButton
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            app:srcCompat="@drawable/briefcase_material"
                            android:id="@+id/btn_camera"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp" />

                        <TextView
                            android:text="1234567890"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/cv_detalle"
                            android:textAppearance="@android:style/TextAppearance.Material.Menu"
                            android:layout_alignBaseline="@+id/textView2"
                            android:layout_alignBottom="@+id/textView2"
                            android:layout_toRightOf="@+id/textView2"
                            android:layout_toEndOf="@+id/textView2"
                            android:textColor="@color/secondary_text" />

                    </RelativeLayout>
                </RelativeLayout>

                <ImageView
                    android:layout_height="90dp"
                    android:id="@+id/cv_image"
                    android:layout_width="90dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@drawable/ethernet_icon_material" />
            </android.support.v7.widget.CardView>

            <ImageButton
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="48dp"
                app:srcCompat="@drawable/colection_material"
                android:id="@+id/btn_subir"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/btn_ubicacion"
                android:layout_toStartOf="@+id/btn_ubicacion"
                android:layout_below="@+id/cv_datos" />

            <ImageButton
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="48dp"
                app:srcCompat="@drawable/tooltip_material"
                android:id="@+id/btn_editar"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/cv_datos" />

            <TextView
                android:text="LIQUIDADA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"
                android:id="@+id/cv_estatus"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="normal|bold"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="11dp" />

            <ImageButton
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="48dp"
                app:srcCompat="@drawable/map_material"
                android:id="@+id/btn_ubicacion"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/btn_editar"
                android:layout_toStartOf="@+id/btn_editar"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/cv_datos" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>