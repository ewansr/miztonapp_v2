<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="7dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="7dp">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/cv"
        app:cardElevation="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/transparent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/cv_fondo"
            android:background="@drawable/cv_background_vii"
            android:adjustViewBounds="false"
            android:layout_height="160dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@android:color/transparent"
            android:layout_height="160dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:elevation="1dp"
                app:cardElevation="0dp"
                android:layout_height="match_parent"
                android:id="@+id/cv_datos"
                app:cardBackgroundColor="@android:color/transparent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="100dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="74dp"
                        android:layout_height="32dp">

                        <ImageButton
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            app:srcCompat="@drawable/google_maps"
                            android:id="@+id/btn_type"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp" />

                        <TextView
                            android:text="Calle 20 de Noviembre # 523"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/cv_tipo_orden"
                            android:textAppearance="@android:style/TextAppearance.Material.Small"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/btn_type"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginRight="10dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:text="2949422460"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/cv_titulo"
                            android:textAppearance="@android:style/TextAppearance.Material.Title"
                            android:textColor="@color/background_accent"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/btn_phone"
                            android:layout_toEndOf="@+id/btn_phone" />

                        <ImageButton
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            app:srcCompat="@drawable/phone_mat"
                            android:id="@+id/btn_phone"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_height="32dp"
                            android:layout_width="32dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="42dp"
                        android:layout_height="32dp">

                        <TextView
                            android:text="Folio:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView2"
                            android:textAppearance="@android:style/TextAppearance.Material.Menu"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/btn_camera"
                            android:layout_toEndOf="@+id/btn_camera"
                            android:textColor="@color/secondary_text"
                            android:layout_marginRight="2dp"
                            android:textSize="14sp" />

                        <ImageButton
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            app:srcCompat="@drawable/briefcase_material"
                            android:id="@+id/btn_camera"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp" />

                        <TextView
                            android:text="1234567890"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/cv_detalle"
                            android:textAppearance="@android:style/TextAppearance.Material.Menu"
                            android:layout_alignBaseline="@+id/textView2"
                            android:layout_alignBottom="@+id/textView2"
                            android:layout_toRightOf="@+id/textView2"
                            android:layout_toEndOf="@+id/textView2"
                            android:textColor="@color/secondary_text"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginRight="7dp">

                        <Button
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            android:text="DETALLE"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:id="@+id/btn_cambiar"
                            android:textSize="12sp"
                            android:layout_below="@+id/btn_subir"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true" />

                        <ImageButton
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="48dp"
                            app:srcCompat="@drawable/colection_material"
                            android:id="@+id/btn_subir"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:visibility="gone" />

                        <Button
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            android:text="COMENTAR"
                            android:layout_width="wrap_content"
                            android:id="@+id/btn_comentar"
                            android:textSize="12sp"
                            android:layout_alignParentTop="true"
                            android:layout_toLeftOf="@+id/btn_cambiar"
                            android:layout_toStartOf="@+id/btn_cambiar"
                            android:layout_height="35dp" />

                    </RelativeLayout>

                </RelativeLayout>

                <TextView
                    android:text="Cobre"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/cv_tipo"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/colorAccent"
                    android:textStyle="normal|bold"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="0dp"
                    android:textAlignment="center" />

                <ImageView
                    android:layout_height="35dp"
                    android:id="@+id/cv_image"
                    android:layout_width="50dp"
                    app:srcCompat="@drawable/ethernet_icon_material"
                    android:layout_alignBottom="@+id/cv_datos"
                    android:layout_toLeftOf="@+id/btn_subir"
                    android:layout_toStartOf="@+id/btn_subir"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="7dp" />

                <TextView
                    android:text="1989-02-09"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cv_fecha"
                    android:textAppearance="@android:style/TextAppearance.Material.Small"
                    android:rotation="-90"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/btn_date"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="0dp"
                    android:textStyle="normal|bold"
                    android:textColor="@color/secondary_text"
                    android:textSize="11sp"
                    android:textAlignment="center"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="110dp" />

                <TextView
                    android:text="LIQUIDADA"
                    android:layout_width="61dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/cv_estatus"
                    android:textColor="@color/secondary_text"
                    android:textStyle="normal|bold"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="22dp"
                    android:layout_marginTop="70dp"
                    android:textSize="10sp"
                    android:textAlignment="center" />

            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>