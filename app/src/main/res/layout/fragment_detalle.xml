<android.support.design.widget.CoordinatorLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="www.miztonapp.mx.DetalleActivity$PlaceholderFragment"
        android:background="@color/colorPrimaryDark">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            app:cardElevation="3dp" >

            <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/scrollView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_above="@+id/btnGuardar"
                xmlns:android="http://schemas.android.com/apk/res/android">

                <RelativeLayout
                    android:layout_width="match_parent"
                    tools:ignore="ObsoleteLayoutParam"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_height="1000dp">

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Estatus"
                        app:met_helperText="Texto"
                        app:met_floatingLabel="normal"
                        app:met_floatingLabelText="Estatus"
                        android:inputType="number"
                        android:singleLine="true"
                        android:id="@+id/edtEstatus"
                        app:met_autoValidate="false"
                        app:met_validateOnFocusLost="false"
                        app:met_floatingLabelAlwaysShown="true"
                        app:met_floatingLabelAnimating="true"
                        app:met_clearButton="false"
                        android:textAllCaps="true"
                        app:met_iconLeft="@drawable/status"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="15dp"
                        app:met_underlineColor="@color/cardview_light_background" />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Tipo de Orden"
                        app:met_helperText="Texto"
                        app:met_floatingLabel="normal"
                        app:met_floatingLabelText="Tipo de órden"
                        android:inputType="number"
                        android:singleLine="true"
                        android:id="@+id/edtTipoOrden"
                        app:met_autoValidate="false"
                        app:met_validateOnFocusLost="false"
                        app:met_floatingLabelAlwaysShown="true"
                        app:met_floatingLabelAnimating="true"
                        app:met_clearButton="false"
                        android:textAllCaps="true"
                        app:met_iconLeft="@android:drawable/ic_input_get"
                        android:layout_marginRight="10dp"
                        android:layout_below="@id/edtEstatus" />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Contratista"
                        app:met_helperText="Texto"
                        app:met_floatingLabel="normal"
                        app:met_floatingLabelText="Contratista"
                        android:inputType="number"
                        android:singleLine="true"
                        android:id="@+id/edtContratista"
                        app:met_autoValidate="false"
                        app:met_validateOnFocusLost="false"
                        app:met_floatingLabelAlwaysShown="true"
                        app:met_floatingLabelAnimating="true"
                        app:met_clearButton="false"
                        android:textAllCaps="true"
                        app:met_iconLeft="@drawable/account_key"
                        android:layout_marginRight="10dp"
                        android:layout_below="@id/edtTipoOrden"
                        app:met_underlineColor="@color/cardview_light_background" />


                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Puerto"
                        app:met_maxCharacters="1"
                        app:met_helperText="Solo números"
                        app:met_floatingLabel="normal"
                        app:met_floatingLabelText="Puerto:"
                        android:inputType="number"
                        android:singleLine="true"
                        android:id="@+id/edtPuerto"
                        android:layout_below="@+id/edtTerminal"
                        android:layout_alignLeft="@+id/edtTerminal"
                        android:layout_alignStart="@+id/edtTerminal"
                        android:layout_alignRight="@+id/edtTerminal"
                        android:layout_alignEnd="@+id/edtTerminal"
                        android:maxLength="1"
                        app:met_autoValidate="false"
                        app:met_validateOnFocusLost="false"
                        app:met_floatingLabelAlwaysShown="true"
                        app:met_floatingLabelAnimating="true"
                        app:met_clearButton="false"
                        android:textAllCaps="true"
                        app:met_iconLeft="@drawable/puerto"
                        app:met_underlineColor="@color/cardview_light_background" />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:layout_width="match_parent"
                        android:hint="Comentarios"
                        app:met_maxCharacters="255"
                        app:met_helperText="Texto"
                        app:met_floatingLabel="normal"
                        app:met_floatingLabelText="Comentarios:"
                        android:inputType="text|textCapCharacters"
                        android:id="@+id/edtComentarios"
                        android:layout_below="@+id/edtPuerto_co"
                        android:layout_alignLeft="@+id/edtPuerto_co"
                        android:layout_alignStart="@+id/edtPuerto_co"
                        android:layout_alignRight="@+id/edtPuerto_co"
                        android:layout_alignEnd="@+id/edtPuerto_co"
                        android:maxLength="255"
                        app:met_autoValidate="false"
                        app:met_validateOnFocusLost="false"
                        app:met_floatingLabelAlwaysShown="true"
                        app:met_floatingLabelAnimating="true"
                        app:met_clearButton="false"
                        android:textAllCaps="true"
                        app:met_iconLeft="@drawable/comentarios"
                        android:layout_height="200dp"
                        app:met_underlineColor="@color/cardview_light_background"
                        android:scrollbars="vertical" />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Teléfono"
                        app:met_maxCharacters="10"
                        app:met_helperText="Solo números"
                        app:met_floatingLabel="normal"
                        app:met_floatingLabelText="Teléfono:"
                        android:inputType="number"
                        android:singleLine="true"
                        android:id="@+id/edtTelefono"
                        android:layout_below="@+id/edtFolio"
                        android:layout_alignLeft="@+id/edtFolio"
                        android:layout_alignStart="@+id/edtFolio"
                        android:layout_alignRight="@+id/edtFolio"
                        android:layout_alignEnd="@+id/edtFolio"
                        android:maxLength="10"
                        app:met_autoValidate="false"
                        app:met_validateOnFocusLost="false"
                        app:met_floatingLabelAlwaysShown="true"
                        app:met_floatingLabelAnimating="true"
                        app:met_clearButton="false"
                        android:textAllCaps="true"
                        app:met_iconLeft="@drawable/phone"
                        app:met_underlineColor="@color/cardview_light_background" />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Terminal"
                        app:met_maxCharacters="2"
                        app:met_helperText="Solo números"
                        app:met_floatingLabel="normal"
                        app:met_floatingLabelText="Terminal:"
                        android:singleLine="true"
                        android:id="@+id/edtTerminal"
                        android:layout_below="@+id/edtDistrito"
                        android:layout_alignLeft="@+id/edtDistrito"
                        android:layout_alignStart="@+id/edtDistrito"
                        android:layout_alignRight="@+id/edtDistrito"
                        android:layout_alignEnd="@+id/edtDistrito"
                        android:maxLength="2"
                        app:met_autoValidate="false"
                        app:met_validateOnFocusLost="false"
                        app:met_floatingLabelAlwaysShown="true"
                        app:met_floatingLabelAnimating="true"
                        app:met_clearButton="false"
                        android:textAllCaps="true"
                        app:met_iconLeft="@drawable/terminal"
                        android:inputType="text|textCapCharacters"
                        app:met_underlineColor="@color/cardview_light_background" />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Central / Distrito"
                        app:met_maxCharacters="7"
                        app:met_helperText="Letras y números"
                        app:met_floatingLabel="normal"
                        app:met_floatingLabelText="Central / Distrito:"
                        android:inputType="text|textCapCharacters"
                        android:singleLine="true"
                        android:id="@+id/edtDistrito"
                        android:layout_below="@+id/edtTelefono"
                        android:layout_alignLeft="@+id/edtTelefono"
                        android:layout_alignStart="@+id/edtTelefono"
                        android:layout_alignRight="@+id/edtTelefono"
                        android:layout_alignEnd="@+id/edtTelefono"
                        android:maxLength="7"
                        app:met_autoValidate="false"
                        app:met_validateOnFocusLost="false"
                        app:met_floatingLabelAlwaysShown="true"
                        app:met_floatingLabelAnimating="true"
                        app:met_clearButton="false"
                        android:textAllCaps="true"
                        app:met_iconLeft="@drawable/central"
                        app:met_underlineColor="@color/cardview_light_background" />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="No. Folio de órden"
                        android:layout_below="@id/edtContratista"
                        android:layout_alignRight="@+id/sp_contratista"
                        android:layout_alignEnd="@+id/sp_contratista"
                        app:met_maxCharacters="9"
                        app:met_helperText="Solo números"
                        app:met_floatingLabel="normal"
                        app:met_floatingLabelText="No. Folio:"
                        android:inputType="number"
                        android:singleLine="true"
                        android:id="@+id/edtFolio"
                        app:met_autoValidate="false"
                        app:met_validateOnFocusLost="false"
                        android:maxLength="9"
                        app:met_floatingLabelAlwaysShown="true"
                        app:met_floatingLabelAnimating="true"
                        app:met_clearButton="false"
                        android:textAllCaps="true"
                        app:met_iconLeft="@drawable/folder_multiple_image_24"
                        android:layout_marginRight="10dp"
                        android:layout_alignLeft="@+id/sp_contratista"
                        android:layout_alignStart="@+id/sp_contratista"
                        app:met_underlineColor="@color/cardview_light_background" />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Ejemplo 100/205"
                        app:met_maxCharacters="7"
                        app:met_helperText="Solo números"
                        app:met_floatingLabel="normal"
                        app:met_floatingLabelText="Principal:"
                        android:singleLine="true"
                        android:id="@+id/edtTerminal_co"
                        android:maxLength="7"
                        app:met_autoValidate="false"
                        app:met_validateOnFocusLost="true"
                        app:met_floatingLabelAlwaysShown="true"
                        app:met_floatingLabelAnimating="true"
                        app:met_clearButton="true"
                        android:textAllCaps="true"
                        app:met_iconLeft="@drawable/terminal"
                        android:inputType="text|textCapCharacters"
                        android:layout_below="@+id/edtPuerto"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Ejemplo A1/10"
                        app:met_maxCharacters="6"
                        app:met_helperText="Solo números"
                        app:met_floatingLabel="normal"
                        app:met_floatingLabelText="Terminal / Secundario:"
                        android:inputType="text|textCapCharacters"
                        android:singleLine="true"
                        android:id="@+id/edtPuerto_co"
                        android:maxLength="6"
                        app:met_autoValidate="false"
                        app:met_validateOnFocusLost="true"
                        app:met_floatingLabelAlwaysShown="true"
                        app:met_floatingLabelAnimating="true"
                        app:met_clearButton="true"
                        android:textAllCaps="true"
                        app:met_iconLeft="@drawable/puerto"
                        android:layout_below="@+id/edtTerminal_co"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                </RelativeLayout>
            </ScrollView>
        </android.support.v7.widget.CardView>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>